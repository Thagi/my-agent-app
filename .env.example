# Global environment variables for the LibreChat LangGraph Agent Platform
# Copy this file to `.env` and update values before running the stack.

# API keys and secrets
OPENAI_API_KEY=sk-your-openai-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_CHAT_MODEL=gpt-4o-mini
N8N_ENCRYPTION_KEY=replace-with-generated-key

# Model routing configuration
LANGGRAPH_MODEL_ROUTER=auto
OLLAMA_BASE_URL=http://host.containers.internal:11434
OLLAMA_MODEL=gpt-oss:20b

# Service configuration
LIBRECHAT_CONFIG_PATH=./config/librechat.json
LANGGRAPH_API_HOST=0.0.0.0
LANGGRAPH_API_PORT=8000

# Networking
PUBLIC_BASE_URL=http://localhost
